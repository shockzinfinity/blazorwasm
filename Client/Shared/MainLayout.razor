@inherits LayoutComponentBase

<div class="page">
  <div class="sidebar">
    <NavMenu />
  </div>

  <div class="main">
    <div class="top-row px-4 auth">
      <LoginDisplay />
      <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
